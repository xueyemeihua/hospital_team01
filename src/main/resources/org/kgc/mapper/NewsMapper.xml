<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kgc.mapper.NewsMapper">


    <insert id="addNews">
        insert into news values (default ,#{newstitle},#{newsdate},#{newscont},default)
    </insert>


    <select id="getNewsByNewsstate" resultType="org.kgc.pojo.News">
        select * from news where newsstate=1
    </select>
    <select id="getNewsByNewsid" resultType="org.kgc.pojo.News">
        select * from news where newsstate=1 and newsid=#{newsid}
    </select>
    <update id="updateNews">
        update news set
        newstitle=#{newstitle},
        newsdate=#{newsdate},
        newscont=#{newscont},
        newsstate=#{newsstate}
        where newsid=#{newsid}
    </update>


</mapper>